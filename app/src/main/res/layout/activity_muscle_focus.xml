<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@drawable/logo_with_text" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RadioGroup
            android:id="@+id/radio_group_muscle_focus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:checkedButton="@id/radio_shoulders">

            <TextView
                android:id="@+id/txt_focus_greet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/muscle_focus_greet" />

            <RadioButton
                android:id="@+id/radio_shoulders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shoulders"
                android:textColor="@color/textColor" />

            <RadioButton
                android:id="@+id/radio_chest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chest"
                android:textColor="@color/textColor" />

            <RadioButton
                android:id="@+id/radio_biceps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Biceps"
                android:textColor="@color/textColor" />

            <RadioButton
                android:id="@+id/radio_triceps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Triceps"
                android:textColor="@color/textColor" />

            <RadioButton
                android:id="@+id/radio_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textColor="@color/textColor" />

            <RadioButton
                android:id="@+id/radio_abs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Abs"
                android:textColor="@color/textColor" />

            <RadioButton
                android:id="@+id/radio_butt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Butt"
                android:textColor="@color/textColor" />

            <RadioButton
                android:id="@+id/radio_quads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quads"
                android:textColor="@color/textColor" />

            <RadioButton
                android:id="@+id/radio_ham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hamstrings"
                android:textColor="@color/textColor" />

            <RadioButton
                android:id="@+id/radio_calves"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calves"
                android:textColor="@color/textColor" />
        </RadioGroup>
    </ScrollView>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="muscleFocusCollection"
        android:text="@string/submit"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />
</LinearLayout>